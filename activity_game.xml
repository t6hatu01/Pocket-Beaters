<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pocket.game.MainActivity" android:baselineAligned="false">

    <ImageView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/areena_taust" />

    <ImageView
        android:id="@+id/player"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_above="@+id/Right"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/Right"
        android:background="@color/colorAccent"
        app:srcCompat="@drawable/idle" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="M"
        android:textSize="40sp" />

    <Button
        android:id="@+id/Jump"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/Right"
        android:layout_toEndOf="@+id/Left"
        android:background="@drawable/button_j" />

    <Button
        android:id="@+id/Right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/Crouch"
        android:layout_toEndOf="@+id/Jump"
        android:background="@drawable/button_r" />

    <Button
        android:id="@+id/Left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Jump"
        android:layout_marginStart="25dp"
        android:background="@drawable/button_l" />

    <Button
        android:id="@+id/Crouch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/Left"
        android:background="@drawable/button_c" />

    <Button
        android:id="@+id/Heavy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Light"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="L"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/Crouch"
        android:layout_toStartOf="@+id/Heavy"
        android:background="@drawable/round"
        android:backgroundTint="#8c3520"
        android:text="H"
        android:textSize="24sp" />

</RelativeLayout>