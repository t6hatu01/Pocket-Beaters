<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/menuButton"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_arro" />

    <ImageView
        android:id="@+id/backView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/shopView"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/menuButton"
        android:scaleType="fitXY"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/itemView"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/itemView2"
        android:layout_marginStart="83dp"
        app:srcCompat="?android:attr/colorPressedHighlight" />

    <ImageView
        android:id="@+id/itemView2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/shopView"
        android:layout_marginEnd="85dp"
        android:layout_marginTop="69dp"
        app:srcCompat="?android:attr/colorPressedHighlight" />

    <ImageButton
        android:id="@+id/buyButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/itemView2"
        android:layout_alignStart="@+id/itemView2"
        android:layout_below="@+id/itemView2"
        android:scaleType="fitXY"
        app:srcCompat="@android:color/background_light" />

    <ImageButton
        android:id="@+id/buyButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/itemView"
        android:layout_alignStart="@+id/itemView"
        android:layout_below="@+id/itemView2"
        android:scaleType="fitXY"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/textCoins"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="50"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textShop"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/menuButton"
        android:text=" Shop"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

</RelativeLayout>