<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/menuButton"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_arro" />

    <ImageView
        android:id="@+id/shopView"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/menuButton"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/button_shopl" />

    <ImageView
        android:id="@+id/backView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menuButton"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/button_back" />

    <TextView
        android:id="@+id/shopView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Shop Here"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="60sp" />
</RelativeLayout>