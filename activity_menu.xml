<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pocket.game.MainActivity" android:baselineAligned="false">

    <ImageView
        android:id="@+id/menubackView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/sunset" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_above="@+id/shopButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/button_playy" />

    <ImageButton
        android:id="@+id/setButton"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/black"
        app:srcCompat="@drawable/button_settingsy" />

    <ImageButton
        android:id="@+id/shopButton"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/black"
        app:srcCompat="@drawable/button_shopy" />

    <ImageButton
        android:id="@+id/credButton"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/playButton"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/button_credits" />
</RelativeLayout>
