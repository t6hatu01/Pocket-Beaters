<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pocket.game.MainActivity" android:baselineAligned="false">

    <ImageView
        android:id="@+id/menubackView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/areena_taust"
        app:srcCompat="@drawable/valikko_tausta" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_above="@+id/shopButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/button_play" />

    <ImageButton
        android:id="@+id/setButton"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/button_settingsg" />

    <ImageButton
        android:id="@+id/shopButton"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/button_shopg" />

    <ImageButton
        android:id="@+id/credButton"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/playButton"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/button_creditsnew" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="created by"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Chrono Motion"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/setButton"
        android:layout_marginTop="45dp"
        android:fontFamily="serif"
        android:text="Pocket"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#780522"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/nameView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nameView"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/textView"
        android:fontFamily="serif"
        android:text="Beaters"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6d0c24"
        android:textSize="60sp"
        android:textStyle="bold|italic" />

</RelativeLayout>
